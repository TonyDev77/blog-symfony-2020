{% extends 'base.html.twig' %}

{% block title %}
    Blog Symfony 4
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-8">
                <div class="row">
                    <div class="col-12">
                        <h2>{{ post.title }}</h2>
                        <small>
                            Post criado em: {{ post.createdAt|date("d/m/Y H:i:s") }}
                            Por {{ post.author.firstName }} {{ post.author.lastName }}
                        </small>
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ post.content|raw }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        <h3>Comentários</h3>
                        <hr>
                    </div>
                    <div class="col-12">
                        <h4>Deixar Comentário</h4>
                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <button type="submit" class="btn btn-sm btn-success mb-5">Enviar comentário</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-4">

            </div>
        </div>
    </div>

{#    <h1>{{ title }}</h1> #}{# Rece essa variavel de uma array em 'DefalutController' #}


{% endblock %}


