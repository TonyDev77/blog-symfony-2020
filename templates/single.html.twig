{% extends 'base.html.twig' %}

{% block title %}
    Blog Symfony 4
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-8">
                <div class="row">
                    <div class="col-12">
                        <h2>{{ post.title }}</h2>
                        <small>
                            Post criado em: {{ post.createdAt|date("d/m/Y H:i:s") }}
                            Por {{ post.author.firstName }} {{ post.author.lastName }} | Coment치rios: {{ post.commentsCollection.count() }}
                        </small>
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        {{ post.content|raw }}
                    </div>
                </div>

                <div class="row">
                    {% if post.commentsCollection.count() %}
                        <div class="col-12">
                            <h3>Coment치rios</h3>
                            <hr>
                            {% for comment in post.commentsCollection %}
                                <div class="card mb-2 bg-comentario">
                                    <div class="card-body">
                                        <strong>{{ comment.name }}</strong> - <strong>{{ comment.email }}</strong>
                                        <br>
                                        <small>Comentado em {{ comment.createdAt|date("d/m/Y H:i:s") }}</small>
                                        <br>
                                        {{ comment.comment }}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                    <div class="col-12">
                        <hr>
{#                        {% include 'includes/messages.html.twig' %}#}
                        <h4>Deixe um Coment치rio</h4>
                        {{ form_start(form, {attr: {action: path('comment_save', { post_id: post.id }), novalidate: 'novalidate'}}) }}
                            {{ form_widget(form) }}
                            <button type="submit" class="btn btn-sm btn-success mb-5">Enviar coment치rio</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-4">

            </div>
        </div>
    </div>

{#    <h1>{{ title }}</h1> #}{# Rece essa variavel de uma array em 'DefalutController' #}

    <style>
        .bg-comentario {
            color: #555754;
            background-color: #f5f4f4;
        }
    </style>

{% endblock %}


