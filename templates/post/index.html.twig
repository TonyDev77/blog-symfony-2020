{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}

    <h1>Postagens Recentes</h1>

    {# Os estilos css estão vindo da 'base.twig.html', de um link copiado do site bootstrap #}
    <a href="{{ path('post_create') }}" class="btn btn-sm btn-success">Criar Post</a>
    <hr>
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Post</th>
            <th>Criado em</th>
            <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        {# Esse laço faz uma varredura par buscar todos os usuários #}
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.title }}</td>
                <td>{{ post.createdAt|date('d/m/Y H:i:s') }}</td>
                <td>
                    <a href="{{ path('post_edit', {'id': post.id}) }}" class="btn btn-sm btn-primary">Editar</a>
                    <a href="{{ path('post_remove', {'id': post.id}) }}" class="btn btn-sm btn-danger">Remover</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>

    </table>
{% endblock %}
