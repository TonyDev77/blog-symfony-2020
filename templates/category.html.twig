{% extends 'base.html.twig' %}

{% block title %}
    Blog Symfony 4
{% endblock %}

{% block stylesheets %}
    <style>
        .posts .post p {
            margin-top: 20px;
        }

        .posts .post a {
            text-decoration: none;
            color: #3c3f41;
            transition: color .2s ease-in-out;
        }

        .posts .post a:hover {
            color: #7d8484;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col8">
                <div class="row">
                    <h1>Categoria: {{ category.name }}</h1>
                    <hr>
                </div>
                <div class="row posts">
                    {# Lista de Postagens #}
                    {% for post in posts %}
                        <div class="col-12 post">
                            <a href="{{ path('single_post', {slug: post.slug}) }}">
                                <img src="https://placeimg.com/640/280/any" alt="Imagem Post: {{ post.title }}" class="img-fluid">
                                <h2>{{ post.title }}</h2>

                                <small>
                                    Post criado em: {{ post.createdAt|date("d/m/Y H:i:s") }}
                                    Por {{ post.author.firstName }} {{ post.author.lastName }}
                                </small>
                                <p>
                                    {{ post.description }}
                                </p>
                            </a>
                            <hr>
                        </div>
                    {% endfor %}

                    <!-- PAGINATOR -->
                    <div class="col-12">
                        {{ knp_pagination_render(posts) }}
                    </div>
                </div>
            </div>
            <div class="col4">

            </div>
        </div>
    </div>

{#    <h1>{{ title }}</h1> #}{# Rece essa variavel de uma array em 'DefalutController' #}


{% endblock %}


