{% extends 'base.html.twig' %}

{% block title %}
    Criar Categoria
{% endblock %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Criação da Categoria</h1>
        <hr>
        {# A vriável 'form' abaixo veio da classe 'UserController' #}
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-lg btn-success">Criar Categoria</button> {# A dica é criar o botão de envio aqui, como foi feiro, e não na classe #}
        {{ form_end(form) }}
    </div>

{% endblock %}



